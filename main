  <footer class="py-6 text-center text-xs text-slate-500">Web bƒõ≈æ√≠ jako statick√° str√°nka (GitLab Pages). Vytvo≈ôeno s ‚ô•.</footer>

  <script>
    // Dynamick√Ω rok ve footeru
    document.getElementById('year').textContent = new Date().getFullYear();

    // P≈ôep√≠naƒç cen: defaultnƒõ "doƒçasn√©" (80/120/160). Po p≈ôepnut√≠ fin√°ln√≠ (100/140/180) a naopak.
    const priceLow = document.getElementById('priceLow');
    const priceMid = document.getElementById('priceMid');
    const priceHigh = document.getElementById('priceHigh');
    const priceBadge = document.getElementById('priceBadge');
    const switchBtn = document.getElementById('switchPrices');
    const priceNote = document.getElementById('priceNote');

    let isFinal = false; // false = doƒçasn√© (80/120/160), true = fin√°ln√≠ (100/140/180)

    function setPrices() {
      if (isFinal) {
        priceLow.textContent = '100';
        priceMid.textContent = '140';
        priceHigh.textContent = '180';
        priceBadge.textContent = 'Fin√°ln√≠ ceny';
        priceBadge.className = 'ml-2 inline-flex items-center px-2 py-1 text-xs rounded-lg bg-emerald-100 text-emerald-800';
        priceNote.textContent = 'Zobrazeny fin√°ln√≠ ceny. Pro n√°vrat klikni znovu.';
      } else {
        priceLow.textContent = '80';
        priceMid.textContent = '120';
        priceHigh.textContent = '160';
        priceBadge.textContent = 'Doƒçasn√© ceny (p≈ô√≠prava webu)';
        priceBadge.className = 'ml-2 inline-flex items-center px-2 py-1 text-xs rounded-lg bg-amber-100 text-amber-800';
        priceNote.textContent = 'Zobrazeny doƒçasn√© ceny (80/120/160 ‚Ç¨).';
      }
    }

    if (switchBtn) {
      switchBtn.addEventListener('click', function(){
        isFinal = !isFinal;
        setPrices();
      });
    }

    setPrices();
  </script>
